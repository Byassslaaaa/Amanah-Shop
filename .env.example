# ============================================
# AMANAH SHOP - ENVIRONMENT CONFIGURATION
# ============================================
# ⚠️ SECURITY WARNING:
# - NEVER commit .env file to repository!
# - Change ALL default passwords before production
# - Use strong, unique API keys for each service
# - Revoke any exposed API keys immediately
# ============================================

APP_NAME="Amanah Shop"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============================================
# PRODUCTION SETTINGS (Change before deploy!)
# ============================================
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com
# APP_KEY=base64:YOUR_GENERATED_KEY_HERE

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=amanah_shop
DB_USERNAME=root
DB_PASSWORD=

# Production: Use strong password!
# DB_PASSWORD=your_strong_password_min_16_chars

# ============================================
# CACHE, QUEUE, SESSION CONFIGURATION
# ============================================
# Development: Use file driver (simple)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Production: Use Redis for better performance
# CACHE_DRIVER=redis
# QUEUE_CONNECTION=redis
# SESSION_DRIVER=redis

# Production: Session security
# SESSION_SECURE_COOKIE=true
# SESSION_HTTP_ONLY=true
# SESSION_SAME_SITE=lax

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Development: Use mailpit (local email testing)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@amanahshop.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production: Gmail SMTP (Recommended)
# 1. Enable 2FA on Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use 16-char app password below (NOT regular password)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=xxxx-xxxx-xxxx-xxxx
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your-email@gmail.com
# MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# MIDTRANS PAYMENT GATEWAY (REQUIRED)
# ============================================
# Register at: https://midtrans.com/
# 1. Sandbox (Testing): https://dashboard.sandbox.midtrans.com/
# 2. Production: https://dashboard.midtrans.com/
# Get credentials from: Settings → Access Keys

MIDTRANS_MERCHANT_ID=
MIDTRANS_CLIENT_KEY=
MIDTRANS_SERVER_KEY=
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# Production: Change to production credentials
# MIDTRANS_IS_PRODUCTION=true

# Configure webhook URL at Midtrans Dashboard:
# Notification URL: https://yourdomain.com/payment/notification
# Finish URL: https://yourdomain.com/payment/finish

# Binderbyte Tracking API (Register at https://binderbyte.com/)
# ⚠️ NEVER commit real API keys to repository!
BINDERBYTE_API_KEY=your_binderbyte_api_key_here

# ============================================
# BITESHIP SHIPPING API (REQUIRED)
# ============================================
# Register at: https://biteship.com/
# Dashboard: https://dashboard.biteship.com/
# Get API Key from: Settings → API Keys

BITESHIP_API_KEY=your_biteship_api_key_here
BITESHIP_BASE_URL=https://api.biteship.com/v1
BITESHIP_ENVIRONMENT=development

# ⚠️ CRITICAL: Shop Origin Configuration (REQUIRED for shipping)
# Get coordinates from Google Maps:
# 1. Search your shop address
# 2. Right click → Copy coordinates
# 3. Format: latitude, longitude

BITESHIP_ORIGIN_CONTACT_NAME="Amanah Shop"
BITESHIP_ORIGIN_CONTACT_PHONE=081234567890
BITESHIP_ORIGIN_ADDRESS="Jl. Raya No. 123, Kelurahan, Kecamatan"
BITESHIP_ORIGIN_POSTAL_CODE=12345
BITESHIP_ORIGIN_LAT=-6.175110
BITESHIP_ORIGIN_LNG=106.865036
BITESHIP_ORIGIN_NOTE="Toko"

# Production: Change to production API key
# BITESHIP_ENVIRONMENT=production

# WhatsApp Business API for Inventory Management
# Choose provider: 'official', 'twilio', or 'vonage'
WHATSAPP_PROVIDER=official
WHATSAPP_AUTO_REPLY=true
WHATSAPP_VERIFY_TOKEN=amanah_shop_webhook_token

# Official WhatsApp Business API (Meta)
# Get credentials from: https://developers.facebook.com/docs/whatsapp
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Twilio WhatsApp (Alternative)
# Get credentials from: https://www.twilio.com/whatsapp
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Vonage WhatsApp (Alternative)
# Get credentials from: https://dashboard.nexmo.com/
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_WHATSAPP_NUMBER=
